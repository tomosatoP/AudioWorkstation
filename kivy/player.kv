#:kivy 2.0.0

<MidiTitleButton>:
    group: 'MidiTitleButtons'
    font_size: 25
    size_hint_y: None
    height: 40
    on_press: self.state = 'down' if self.state == 'down' else 'down'       

<PlayerView>:
    playlist: boxlayout_play_list
    rules: gridlayout_rules

    BoxLayout:
        size: root.size
        orientation: 'vertical'
        Label:
            size_hint_y: 0.25
            font_size: 40
            text: '伴奏'
        BoxLayout:
            orientation: 'horizontal'
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                bar_width: 30
                BoxLayout:
                    id: boxlayout_play_list
                    orientation: 'vertical'
                    height: self.minimum_height
                    size_hint_y: None
            GridLayout:
                id: gridlayout_rules
                cols: 2
                rows: 8
