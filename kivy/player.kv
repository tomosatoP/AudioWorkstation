#:kivy 2.0.0

<MidiTitleButton>:
    group: 'MidiTitleButtons'
    font_size: 25
    size_hint_y: None
    height: 40
    on_press: self.state = 'down' if self.state == 'down' else 'down'       

<PlayerView>:
    playlist: boxlayout_play_list
    rules: gridlayout_rules

    BoxLayout:
        size: root.size
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Label:
                size_hint_x: 0.2
                font_size: 40
                text: '伴奏'
            ToggleButton:
                border: (0, 0 , 0 ,0)
                size_hint_x: 0.1
                font_size: 40
                state: 'normal'
                text: '▶'
                on_press: 
                    root.sound_on() if self.state == 'down' \
                    else root.sound_off()
            ToggleButton:
                size_hint_x: 0.1
                font_size: 40
                state: 'normal'
                disabled: True
                text: '||'
                on_press:
                    root.pause() if self.state == 'down' \
                    else root.restart()
            Slider:
                size_hint_x: 0.6
                disabled: True
        BoxLayout:
            orientation: 'horizontal'
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                bar_width: 30
                BoxLayout:
                    id: boxlayout_play_list
                    orientation: 'vertical'
                    height: self.minimum_height
                    size_hint_y: None
            GridLayout:
                id: gridlayout_rules
                cols: 2
                rows: 8
