#:kivy 2.0.0
#:set default_font_size sp(30)

<MidiTitleButton>:
    group: 'MidiTitleButtons'
    font_size: default_font_size * 0.8
    size_hint_y: None
    height: default_font_size * 1.5
    valign: 'center'
    halign: 'center'
    shorten: True
    shorten_from: 'center'
    on_press: self.state = 'down' if self.state == 'down' else 'down'

<PlayerView>:
    play_button: play_togglebotton
    pause_button: pause_togglebutton
    ticks_slider: ticks
    midifiles: boxlayout_play_list
    channels: gridlayout_rules

    BoxLayout:
        size: root.size
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            ToggleButton:
                id: play_togglebotton
                disabled: True
                size_hint_x: 0.15
                font_size: default_font_size
                state: 'normal'
                text: 'â–¶'
                on_press: root.sound(self.state)
            ToggleButton:
                id: pause_togglebutton
                size_hint_x: 0.15
                font_size: default_font_size
                state: 'normal'
                disabled: True
                text: '||'
                on_press: root.pause(self.state)
            BoxLayout:
                orientation: 'horizontal'
                size_hint_x: 0.70
                Slider:
                    id: ticks
                    size_hint_x: 0.8
                    disabled: False
                    value_track: True
                    value_track_color: 1, 0, 0, 1
                    min: 0
                    max: 0
                    step: 1
                    value: 0
                Label:
                    halign: 'right'
                    size_hint_x: 0.2
                    font_size: default_font_size * 0.5
                    text: str(int(ticks.value)) + '\n' + 'Max: ' + str(int(ticks.max))
        BoxLayout:
            orientation: 'horizontal'
            ScrollView:
                size_hint_x: 0.55
                do_scroll_x: False
                do_scroll_y: True
                bar_width: 30
                BoxLayout:
                    id: boxlayout_play_list
                    orientation: 'vertical'
                    height: self.minimum_height
                    size_hint_y: None
            GridLayout:
                id: gridlayout_rules
                size_hint_x: 0.45
                cols: 2
                rows: 8
